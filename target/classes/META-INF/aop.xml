<!DOCTYPE aspectj PUBLIC
        "-//AspectJ//DTD//EN" "http://www.eclipse.org/aspectj/dtd/aspectj.dtd">
<aspectj>
    <weaver>
        <!-- only weave classes in this package -->
        <include within="foo.*" />  
         <include within="*.*" /> 
    </weaver>
    <aspects>
        <!-- use only this aspect for weaving -->
        <aspect name="foo.ProfilingAspect" />
    </aspects>
</aspectj>